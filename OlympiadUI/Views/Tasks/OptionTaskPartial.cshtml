@using OlympiadUI.Models
@model IEnumerable<OptionsTaskOption>

<div id="option-task">
    @for (int i = 0; i < Model.Count(); i++)
    {
        var optionName = $"task-option-{i}";
        var checkd = string.Empty;
        if (i == 0)
        { checkd = "checked"; }

        <div class="form-check" name=@optionName>
            <input type="radio" class="form-check-input" @checkd/>
            <label class="form-check-label">@Model.ElementAt(i).Option</label>
        </div>
    }
</div>