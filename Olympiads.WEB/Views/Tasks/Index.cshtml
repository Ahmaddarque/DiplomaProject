<span id="addButton" class="m-1 mx-auto btn btn-round btn-warning">Добавить</span>
<div class="row">
    <div id="tasks" class="col-md-12">

    </div>
    <div id="addEditTasks" class="d-none">

    </div>
</div>

@section Scripts
{
    @Scripts.Render("~/Scripts/Admin/tasks.js")
}


