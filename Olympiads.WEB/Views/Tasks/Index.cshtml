@model int
@{
    Layout = "~/Views/Admin/AdminAutorizedLayout.cshtml";
    ViewBag.Title = "Задания";
}

<div class="page-header card">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <i class="icofont icofont icofont icofont-tasks-alt bg-c-green"></i>
                <div class="d-inline">
                    <h4>Задания</h4>
                    <span>Просмотр,добавление,изменение и удаление заданий</span>
