
@{
    ViewBag.Title = "Activities";
    Layout = "~/Views/Admin/AdminAutorizedLayout.cshtml";
}


@{
    ViewBag.Title = "Статистика по мероприятиям";
    Layout = "~/Views/Admin/AdminAutorizedLayout.cshtml";
}

<div class="page-header card">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <i class="icofont icofont icofont icofont-chart-pie-alt bg-c-orenge"></i>
                <div class="d-inline">
                    <h4>Статистика по мероприятиям</h4>
                    <span>Просмотр статистики по мероприятиям</span>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="card">
    <div class="card-header">
        <h5>Недельная статистика</h5>
    </div>
    <div class="card-block">
        <div class="row justify-content-center">
            <div class="col-md-4 col-sm-12">
                <h5 class="text-center">Тестирования</h5>
                <div id="testWeekStats" class="chart"></div>
            </div>
            <div class="col-md-4 col-sm-12">
                <h5 class="text-center">Олимпиады</h5>
                <div id="olympiadsWeekStats" class="chart"></div>
            </div>
            <div class="col-md-4 col-sm-12">
                <h5 class="text-center">Тестирования/Олимпиады</h5>
                <div id="testOlympiadWeekRatio" class="chart"></div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5>Месячная статистика</h5>
    </div>
    <div class="card-block">
        <div class="row align-items-center">
            <div class="col-2">
                <label>Период</label>
                <input class="form-control" id="monthPeriod" type="number" value="1" />
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-sm-12">
                <h5 class="text-center">Тестирования</h5>
                <div id="testMonthStats" class="chart"></div>
            </div>
            <div class="col-sm-12">
                <h5 class="text-center">Олимпиады</h5>
                <div id="olympiadsMonthStats" class="chart"></div>
            </div>
            <div class="col-sm-12">
                <h5 class="text-center">Тестирования/Олимпиады</h5>
                <div id="testOlympiadMonthRatio" class="chart"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @Scripts.Render("~/bundles/AmCharts")
    @Scripts.Render("~/Scripts/Statistics/activities-statistics.js");
}
@section Styles
{
    @Styles.Render("~/Content/Statistics/stats.css");
}



