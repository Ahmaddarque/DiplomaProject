@using Olympiads.WEB.Models.Admin
@model AdminAuthViewModel
@{
    Layout = "~/Views/Admin/AdminUnauthorizedLayout.cshtml";
    ViewBag.Title = "Логин";
}

<div class="login-card card-block auth-body mr-auto ml-auto">
    @using (Html.BeginForm("Login", "Admin", FormMethod.Post, new { @class = "md-float-material" }))
    {
        <div class="text-center">
            <img src="@Url.Content("~/Content/Img/auth/logo.png")" alt="logo.png">
        </div>
        <div class="auth-box">
            <div class="row m-b-20 ">
                <div class="col-md-12">
                    <h3 class="text-center txt-primary">Войти</h3>
                </div>
            </div>
            <hr />
            <div class="input-group">
                @Html.TextBoxFor(x => x.Login,new { @class= "form-control",@placeholder="Логин" })
                <span class="md-line"></span>
            </div>
            <div class="input-group">
                @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Пароль" })
                <span class="md-line"></span>
            </div>
            <div class="row m-t-25 text-left">
                <div class="col-sm-7 col-xs-12">
                    <div class="checkbox-fade fade-in-primary">
                        <label>
                            <input type="checkbox" value="">
                            <span class="cr"><i class="cr-icon icofont icofont-ui-check txt-primary"></i></span>
                            <span class="text-inverse">Запомнить меня</span>
                        </label>
                    </div>
                </div>
                <div class="col-sm-5 col-xs-12 forgot-phone text-right">
                    <a href="@Url.Action("Restore")" class="text-right f-w-600 text-inverse">Забыли пароль?</a>
                </div>
            </div>
            <div class="row m-t-30">
                <div class="col-md-12">
                    <input type="submit" class="btn btn-primary btn-md btn-block waves-effect text-center m-b-20" value="Вход">
                </div>
            </div>
            <hr/>
            <div class="row">
                <div class="col-md-10">
                    <p class="text-inverse text-left m-b-0">Панель администратора</p>
                    <p class="text-inverse text-left"><b>by Ahmaddark</b></p>
                </div>
                <div class="col-md-2">
                    <img src="@Url.Content("~/Content/Img/auth/logo-small.png")" alt="small-logo.png">
                </div>
            </div>

        </div>
    }
</div>

