@model Olympiads.WEB.Models.Admin.ParticipantEditViewModel

<div class="card">
    <div class="card-header">
        @if (Model.IsEdit)
        {
            <h5>Изменить</h5>
        }
        else
        {
            <h5>Добавить</h5>
        }
        <div class="card-header-right"><i class="icofont icofont-spinner-alt-5"></i></div>

        <div class="card-header-right">
            <i class="icofont icofont-spinner-alt-5"></i>
        </div>

    </div>
    <div class="card-block">
        @using (Html.BeginForm("Save", "Participants", FormMethod.Post, new { @id = "editParticipantForm" }))
        {
            <div id="errors" class="text-danger"></div>
            <div id="success" class="text-success"></div>
            @Html.ValidationSummary(true)
            @Html.HiddenFor(x => x.Id)
            <div class="form-group">
                <label for="name">Имя</label>
                @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control error", @placeholder = "Имя", @id = "name" } })
                @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger error" })
            </div>
            <div class="form-group">
                <label for="surname">Фамилия</label>
                @Html.EditorFor(x => x.Surname, new { htmlAttributes = new { @class = "form-control", @placeholder = "Фамилия", @id = "surname" } })
                @Html.ValidationMessageFor(model => model.Surname, null, new { @class = "text-danger error" })
            </div>
            <div class="form-group">
                <label for="lastname">Отчество</label>
                @Html.EditorFor(x => x.Lastname, new { htmlAttributes = new { @class = "form-control", @placeholder = "Отчество", @id = "lastname" } })
                @Html.ValidationMessageFor(x => x.Lastname, null, new { @class = "text-danger error" })
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                @Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = "form-control error", @placeholder = "Email", @id = "email" } })
                @Html.ValidationMessageFor(x => x.Email, null, new { @class = "text-danger error" })
            </div>
            <div class="form-group">
                <label for="phone">Телефон</label>
                @Html.EditorFor(x => x.Phone, new { htmlAttributes = new { @class = "form-control", @placeholder = "phone", id = "phone" } })
                @Html.ValidationMessageFor(x => x.Phone, null, new { @class = "text-danger error" })
            </div>
            <div class="form-group">
                <label for="birthdate">Дата рождения</label>
                @Html.EditorFor(x => x.Birthdate, new { htmlAttributes = new { @class = "form-control", @placeholder = "Дата рождения", @id = "birthdate" } })
                @Html.ValidationMessageFor(x => x.Birthdate, null, new { @class = "text-danger error" })
            </div>
            <div class="form-group">
                <label for="educationalInstitution">Образовательное учреждение</label>
                @Html.EditorFor(x => x.EducationalInstitution, new { htmlAttributes = new { @class = "form-control", @placeholder = "Образовательное учреждение", @id = "educationalinstitution" } })
                @Html.ValidationMessageFor(x => x.EducationalInstitution, null, new { @class = "text-danger error" })
            </div>
            <div class="form-group">
                <label for="isMale">Пол</label>
                <div class="form-check">
                    <label>Мужской</label>
                    @Html.RadioButtonFor(x => x.IsMale, true, new { @id = "male" })
                    <label>Женский</label>
                    @Html.RadioButtonFor(x => x.IsMale, false, new { @id = "female" })
                </div>
            </div>
            <div class="d-flex justify-content-center">
                @if (Model.IsEdit)
                {
                    <input type="submit" class="m-1 btn btn-round btn-success" id="editButton" value="Сохранить">
                }
                else
                {
                    <input type="submit" class="m-1 btn btn-round btn-success" id="addParticipantButton" value="Сохранить">
                }
                <span class="m-1 btn btn-round btn-danger " id="cancelEditButton">Отмена</span>
            </div>
        }
    </div>
</div>
