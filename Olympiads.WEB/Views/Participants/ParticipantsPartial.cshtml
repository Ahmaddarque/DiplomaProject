@model IEnumerable<Olympiads.WEB.Models.Admin.ParticipantViewModel>

<div class="card">
    <div class="card-header">
        <h5>Участники</h5>
        <div class="card-header-right">
            <ul class="list-unstyled card-option">
                <li><i class="icofont icofont-simple-left"></i></li>
                <li><i class="icofont icofont-maximize full-card"></i></li>
                <li><i class="icofont icofont-minus minimize-card"></i></li>
                <li><i class="icofont icofont-refresh reload-card"></i></li>
                <li><i class="icofont icofont-error close-card"></i></li>
            </ul>
        </div>
    </div>
    <div class="card-block table-border-style">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Фамилия</th>
                        <th>Имя</th>
                        <th>Отчество</th>
                        <th >Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count(); i++)
                    {
                        <tr>
                            <td>@Model.ElementAt(i).Id</td>
                            <td>@Model.ElementAt(i).Surname</td>
                            <td>@Model.ElementAt(i).Name</td>
                            <td>@Model.ElementAt(i).Lastname</td>
                            <td class="d-flex">
                                <i data-id="@Model.ElementAt(i).Id" class="icofont icofont-edit btn btn-warning icofont-2x btn-edit-participant text-center align-self-center m-1"></i>
                                @if (@Model.ElementAt(i).IsBlocked)
                                {
                                    <i data-id=@Model.ElementAt(i).Id class="icofont icofont-unlock icofont-2x btn btn-success btn-unblock-participant text-center align-self-center m-1"></i>
                                }
                                else
                                {
                                    <i data-id=@Model.ElementAt(i).Id class="icofont icofont-lock icofont-2x btn btn-danger btn-block-participant text-center align-self-center m-1"></i>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
